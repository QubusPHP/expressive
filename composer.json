{
    "name": "qubus/expressive",
    "type": "library",
    "description": "Orm with DataMapper and ActiveRecord.",
    "keywords": ["database","querybuilder","dbal","database abstraction","orm","datamapper","activerecord"],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "joshua@joshuaparker.dev"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "qubus/config": "^3",
        "qubus/dbal": "^2"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.0",
        "qubus/qubus-coding-standard": "^1.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Expressive\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
        "Qubus\\Tests\\Expressive\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
